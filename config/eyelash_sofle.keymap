        Combo-LGui {
            bindings = <&kp LEFT_GUI>;
            key-positions = <41 40>;
            slow-release;
            timeout-ms = <100>;
        };

        Combo-LAlt {
            bindings = <&kp LEFT_ALT>;
            key-positions = <43 44>;
            slow-release;
            timeout-ms = <100>;
        };

        Combo-LShift {
